<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/saveTag"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:background="@color/Lavender"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/bill_class"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="22dp"
                  android:text="55.55"
                  android:textColor="@color/purple_700"
                  android:textSize="18sp"/>
        <TextView android:id="@+id/bill_money"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="55.55"
                  android:paddingRight="20dp"
                  android:gravity="end"
                  android:textColor="@color/DoderBlue"
                  android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/bill_beizhu"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:text="备注：无"
                  android:textColor="@color/login_bg_begin"
                  android:textSize="12sp"/>
        <TextView android:id="@+id/deletebtn"
                  android:layout_width="55dp"
                  android:layout_height="wrap_content"
                  android:text="删除"
                  android:textColor="@color/Tomato"
                  android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>